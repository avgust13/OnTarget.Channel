@model OnTarget.Channel.Web.Models.VideoViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Home"))
{
    <p class="alert alert-info">All fields are <strong>required</strong>.</p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DirectUrl)
        @Html.TextBoxFor(m => m.DirectUrl, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DirectUrl)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EmbedUrl)
        @Html.TextAreaFor(m => m.EmbedUrl, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.EmbedUrl)
    </div>

    @Html.ActionLink("Back", "Index", "Home")
    <button type="submit" class="btn btn-primary">Save</button>
}